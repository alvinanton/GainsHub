@model GainsHub.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5 mb-4 d-flex justify-content-center">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" style="max-width: 100%; max-height: 400px; object-fit: contain;">
        </div>

        <div class="col-md-7">
            <!-- Product Details Card -->
            <div class="card shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title mb-3">@Model.Name</h2>
                    <p class="text-muted">@string.Join(", ", Model.ProductCategories.Select(pc => pc.Category.Name))</p>
                    <p class="lead mb-3">@Model.Description</p>
                    <h4 class="text-success">@Model.Price.ToString("C")</h4>

                    <!-- Align buttons in the same row -->
                    <div class="mt-auto d-flex gap-3 justify-content-center">
                        <a class="btn btn-success btn-lg flex-grow-2" asp-action="AddToCart" asp-route-id="@Model.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </a>
                        <a class="btn btn-secondary btn-lg flex-grow-2" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

