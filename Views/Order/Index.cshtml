@model IEnumerable<GainsHub.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2>Your Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>$@order.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
