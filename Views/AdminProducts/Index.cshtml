@model IEnumerable<GainsHub.Models.Product>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Products</h2>

<table class="table table-hover align-content-center">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>StockQuantity</th>
        <th>ImageUrl</th>
        <th>IsVisible</th>
        <th>Actions</th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price.ToString("C")</td>
            <td>@product.StockQuantity</td>
            <td>@product.ImageUrl</td>
            <td>@product.IsVisible</td>
            <td>
                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                <form method="post" asp-action="Delete" asp-route-id="@product.Id" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </td>
        </tr>
    }

</table>